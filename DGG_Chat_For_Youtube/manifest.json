{
    "name": "DGG Chat Everywhere",
    "description": "Replaces Live Chats With DGG Chat.",
    "version": "0.1.3",
    "manifest_version": 3,
    "default_locale": "en",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "src/background.js"
    },
    "content_scripts": [{
        "matches": ["*://*.youtube.com/*", "*://*.twitch.tv/*"],
        "js": ["js/jquery/jquery.min.js", "src/content.js"],
        "run_at": "document_start"
    }],
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting"
    ]
}